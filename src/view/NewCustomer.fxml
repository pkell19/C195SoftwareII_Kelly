<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.NewCustomer">
   <GridPane layoutX="150.0" layoutY="115.0" prefHeight="225.0" prefWidth="500.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <TextField fx:id="newCustomerName" promptText="Customer Name" />
         <TextField fx:id="newAddress" promptText="Address" GridPane.rowIndex="1" />
         <TextField fx:id="newPostalCode" promptText="Postal Code" GridPane.rowIndex="2" />
         <TextField fx:id="newPhoneNumber" promptText="Phone Number" GridPane.rowIndex="3" />
         <TextField fx:id="newCountry" promptText="Country" GridPane.rowIndex="4" />
         <TextField fx:id="newDivision" promptText="Division" GridPane.rowIndex="5" />
         <TextField fx:id="newCustomerID" promptText="Customer ID" GridPane.rowIndex="6" />
      </children>
   </GridPane>
   <Label alignment="CENTER" contentDisplay="CENTER" layoutX="338.0" layoutY="18.0" text="New Customer" textAlignment="CENTER" AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="1.0">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
   </Label>
   <HBox layoutX="1.0" layoutY="60.0" prefHeight="40.0" spacing="50.0" style="-fx-background-color: #36454f;" AnchorPane.leftAnchor="1.0" AnchorPane.rightAnchor="1.0">
      <children>
            <Button mnemonicParsing="false" onAction="#onActionToCustomer" prefWidth="150.0" text="Customers">
            <HBox.margin>
               <Insets top="7.0" />
            </HBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#onActionToReport" prefWidth="150.0" text="Reports">
            <HBox.margin>
               <Insets top="7.0" />
            </HBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#onActionExit" prefWidth="150.0" text="Exit Scheduler">
            <HBox.margin>
               <Insets top="7.0" />
            </HBox.margin></Button>
            <TextField fx:id="apptSearch" minWidth="0.0" promptText="Search">
            <HBox.margin>
               <Insets bottom="7.0" top="7.0" />
            </HBox.margin></TextField>
      </children>
      <padding>
         <Insets left="20.0" right="20.0" />
      </padding>
   </HBox>
   <Button layoutX="413.0" layoutY="352.0" mnemonicParsing="false" onAction="#onActSaveCustList" prefWidth="100.0" style="-fx-background-color: #36454f;" text="Save" textAlignment="CENTER" textFill="#fcf9f9">
      <font>
         <Font name="Arial" size="14.0" />
      </font></Button>
   <Button layoutX="544.0" layoutY="351.0" mnemonicParsing="false" onAction="#onActNoSaveCustList" prefWidth="100.0" style="-fx-background-color: #36454f;" text="Cancel" textAlignment="CENTER" textFill="#fcf9f9">
      <font>
         <Font name="Arial" size="14.0" />
      </font></Button>
</AnchorPane>
